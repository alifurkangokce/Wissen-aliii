@model IEnumerable<Wissen.Model.Post>
@{
    ViewBag.Title = "Yazilar";
}

<h2>Yazilar</h2>
<a href="@Url.Action("Create")" class="btn btn-primary">Yeni yazi</a>
<table class="table table-hover table-striped">
    <tr>
        <th>Başlık</th>
        @*<th>Açıklama</th>*@
        <th>Kategori</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a href="@Url.Action("Edit",new {id=item.Id})">@item.Title</a></td>
            @*<td>@Html.Raw(item.Description)</td>*@ 
            <td>@(item.Category?.Name)</td>
            <td>
                <a href="@Url.Action("Edit",new {id=item.Id})" class="btn btn-primary btn-sm">Düzenle</a>
                <a href="@Url.Action("Details", new { id=item.Id})" class="btn btn-primary btn-sm">Ayrıntılar</a>
                <a href="@Url.Action("Delete",new { id=item.Id })" class="btn btn-danger btn-sm">Sil</a>

            </td>
        </tr>
    }
</table>

